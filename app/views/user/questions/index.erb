<h3>Categorías</h3>
<div class="row">
  <div class="col-md-12 col-lg-12">
    <a class="btn btn-primary pull-right" href="/questions/new">Nueva Pregunta</a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 col-lg-12">
    <div class="table-responsive">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th><div class="pull-left">Acciones</div></th>
            <th>Categoría</th>
            <th>Pregunta</th>
          </tr>
        </thead>
        <tbody>
          <% questions.each do |question| %>
            <tr>
              <td>
                <div class="pull-left">
                  <a class="btn btn-info btn-sm" href="/questions/<%= question.id %>" title="Ver"><span class="glyphicon glyphicon-eye-open"></span></a>
                  <a class="btn btn-success btn-sm" href="/questions/<%= question.id %>/edit" title="Editar"><span class="glyphicon glyphicon-pencil"></span></a>
                  <form action="/questions/<%= question.id %>" class="btn btn-delete btn-sm" method="post" onsubmit="return confirm('Está seguro?');">
                    <%= csrf.form_tag %>
                    <input name="_method" type="hidden" value="delete"></input>
                    <button class="btn btn-danger btn-sm" type="submit" title="Borrar"><span class="glyphicon glyphicon-remove"></span></button>
                  </form>
                </div>
              </td>
              <td><%= question.category.name %></td>
              <td><%= question.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <a class="btn btn-primary pull-right" href="/questions/new">Nueva Pregunta</a>
  </div>
</div>