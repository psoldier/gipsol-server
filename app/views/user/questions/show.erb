<div class="row">
  <div class="col-md-12 col-lg-12">
    <h4>
      Pregunta
    </h4>
    <div class="col-md-6 col-lg-6 col-md-offset-1 col-lg-offset-1">
      <div class="form-horizontal">
        <div class="form-group">
          <label class="col-md-3 col-lg-3 control-label">Pregunta:</label>
          <div class="col-md-9 col-lg-9">
            <label class="control-label">
              <%= question.title %>
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 col-lg-3 control-label">Creada:</label>
          <div class="col-md-9 col-lg-9">
            <label class="control-label">
              <%= date_time_format(question.created_at, true) %>
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 col-lg-3 control-label">Editada:</label>
          <div class="col-md-9 col-lg-9">
            <label class="control-label">
              <%= question.updated_at.nil? ? "-" : date_time_format(question.created_at, true) %>
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr/>
<div class="row">
  <div class="col-md-12 col-lg-12">
    <a class="btn btn-primary" href="/questions">Volver</a>
    <a class="btn btn-success" href="/questions/<%= question.id %>/edit">Editar</a>
  </div>
</div>

