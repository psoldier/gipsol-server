<hr></hr>
<div class="contact-details contact-edit">
  <a class="toggle-link <% if category.questions.empty? %>empty-data<% end %>" data-toggle="collapse" href="#questions-info">
    <h4 class="subtitle"><i class="fa fa-user"></i> Preguntas <i class="fa fa-chevron-down pull-right"></i></h4>
  </a>
  <div id="questions-info" class="toggle-content collapse in">
    <table class="table">
      <thead>
        <tr>
          <th>Pregunta</th>
          <th>Respuesta 1</th>
          <th>Respuesta 2</th>
          <th>Respuesta 3</th>
          <th>Respuesta 4</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="questions-info-attributes">
        <% category.questions.each_with_index do |question,index| %>
          <tr>
            <td>
              <span class="question-title">Pregunta: </span>
              <input name="category[questions][][title]" value="<%= question.title %>" type="text" autofocus/>
            </td>
            <% question.answerds.each_with_index do |answerd,index| %>
              <td>
                <span class="question-title">Respuesta 1:</span>
                <input name="category[questions][][answerds][][text]" value="<%= answerd.text %>" type="text"/>
              </td>
            <% end %>
            <% if index > 0 %>
              <td class="edit-btn-align">
                <button class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></button>
              </td>
            <% else %>
              <td class="hidden-xs"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="edit-btn-box">
      <button id="add-names-button" class="btn btn-success btn-sm" <% if category.questions.count >= 4 %>disabled<% end %>>+</button>
    </div>
  </div>
</div>
<hr></hr>