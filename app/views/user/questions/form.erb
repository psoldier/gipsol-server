<%= csrf.form_tag %>
<div class="form-group">
  <label class="col-sm-3 control-label" for="question_category">Categor√≠a</label>
  <div class="col-sm-5">
    <select class="form-control" id="category_id" name="question[category_id]" required="<%= true %>">
      <option></option>
      <% categories.each do |category| %>
        <option <%= "selected" if category.id == question.category_id %> value="<%= category.id %>">
          <%= category.name %>
        </option>
      <% end %>
    </select>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="title">Pregunta</label>
  <div class="col-sm-5">
    <input class="form-control" id="title" name="question[title]" required="<%= true %>" type="text" value="<%= question.title %>"></input>
  </div>
</div>
<% question.answerds.each.with_index(1) do |answerd,index| %>
  <div class="form-group">
    <label class="col-sm-3 control-label" for="answerd_<%=index%>">Respuesta <%=index%></label>
    <div class="col-sm-5">
      <input class="form-control" id="answerd_<%=index%>" name="question[answerds_attributes][][text]" required="<%= true %>" type="text" value="<%= answerd.text %>" />
    </div>
  </div>  
<%end%>

<div class="row">
  <div class="col-md-12 col-lg-12">
    <div class="pull-right">
      <a class="btn btn-primary" href="/categories">Volver</a>
      <button class="btn btn-success" type="submit">Guardar</button>
    </div>
  </div>
</div>